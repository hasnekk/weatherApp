<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Weather Alert</title>

  <!--css links-->
  <link rel="stylesheet" href="styles/index.css">

  <!--bootstrap css-->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

</head>

<body>

  <main>
    <img id="smallBg" class="backGroundImage" src=<%= backGrounds.small %> alt="background image">
    <img id="bigBg" class="backGroundImage" src=<%= backGrounds.big %> alt="background image">

    <div class="content">

      <form method="post" action="/weather">
        <input type="text" name="search" placeholder="Your city">
        <button type="submit">
          <svg xmlns="http://www.w3.org/2000/svg" fill="white" class="bi bi-search" viewBox="0 0 16 16">
            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
          </svg>
        </button>
      </form>

      <div class="weatherInfoNow">
        <% let iconUrl = `https://openweathermap.org/img/wn/${todaysWeather.weather[0].icon}.png`; %>
        <img src=<%= iconUrl %> alt="weather icon">
        <span>
          <p class="description"> <%= todaysWeather.weather[0].description %> </p>
          <p class="city"> <%= todaysWeather.name %> </p>
          <p class="date"> <%= todaysWeather.time %> </p>
          <p class="temp"> <%= todaysWeather.main.temp %> &deg;C </p>
        </span>
      </div>


      <div class="weatherPerDays">

        <% for(let fw of futureWeather) { %>

        <div class="weatherDay">
          <% let iconUrl = `https://openweathermap.org/img/wn/${fw.weather[0].icon}.png`; %>
          <img src=" <%= iconUrl %> " alt="weather icon">
          <p class="description"> <%= fw.weather[0].description %> </p>
          <p class="date"> <%= fw.dt_txt %> </p>
        </div>

        <% } %>

      </div>
      

    </div>


  </main>





  <!--js scripts-->
  <script src="js/index.js"></script>

  <!--bootstrap js-->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

</body>

</html>